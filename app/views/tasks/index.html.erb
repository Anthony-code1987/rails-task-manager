<ul>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
      <% if task.completed == true %>
     <i class="fa-regular fa-square-check"></i>
      <% else %>
     <i class="fa-regular fa-square"></i>
      <% end %>
    <li><%= task.title %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Create new task", new_task_path %>
